          <Thumb																										Size="13,13"					Texture="Controls_ScrollBarHandleV_Brown" StateOffsetIncrement="0,0" SliceCorner="6,6" SliceTextureSize="13,13"/>
        </ScrollBar>
        <Stack ID="Leaders" Offset="0,20" StackGrowth="Bottom"/>
      </ScrollPanel>
